<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageview_no_results"
            android:layout_width="@dimen/no_results_icon_size"
            android:layout_height="@dimen/no_results_icon_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_no_results"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_no_results_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.TypographyStyles.Headline5"
            android:text="@string/no_results_title"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_no_results_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.TypographyStyles.Body1"
            android:textColor="@color/gray"
            android:text="@string/no_results_body"/>

    </LinearLayout>
</layout>